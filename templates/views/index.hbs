<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="style.css">

</head>
<body>
    <!-- Navbar -->
 {{>nav}}



<!-- buttons_section -->
<hr />
<div class="container bor_2 my-4 ">
    <div class="row  ">
        <div class="col col-md-3 d-flex justify-content-center  "><a href="/add"><button type="button" class="btn btn-secondary">Add</button></a></div>
        {{!-- <div class="col col-md-3 d-flex justify-content-center"><a href=""><button type="button" class="btn btn-secondary">Delete</button></a></div> --}}
        <div class="col col-md-3 d-flex justify-content-center "><a href="/profit"><button type="button" class="btn btn-secondary">Profit</button></a></div>
        <div class="col col-md-3 d-flex justify-content-center "><a href="/sold"><button type="button" class="btn btn-secondary">Sold</button></a></div>
    </div>
</div>
<hr  />



      <!-- Heading -->
      <section class="main_heading my-4">
        <div class="text-center">
            <h1 class="display-3">Inventory</h1>
            <hr class="w-25 mx-auto"/>
        </div>




  <!-- table_section -->
  <section class="table_inventory">
    <div class="container  bor_1">

        <table class="table">
            <thead>
              <tr>
                <th class="display-6" scope="col">Id</th>
                <th  class="display-6"  scope="col">Name</th>
                <th  class="display-6" scope="col">Price</th>
                <th  class="display-6" scope="col">Stock</th>
                <th class="display-6"  scope="col">Delete</th>
                <th class="display-6"  scope="col">Update</th>
              </tr>
            </thead>
             
            <tbody>
            {{#each data}}
             <form action="/del/{{id}}" method="GET">
              <tr>
                <th scope="row">{{id}}</th>
                <td>{{name}}</td> 
                <td>{{sellprice}}</td>
                <td>{{stock}}</td>
                
                <td><a href=""><button type="submit" class="btn btn-danger">Del</button></a></td>
                    </form>
                     <td><a href="/update/{{id}}"><button type="button" class="btn btn-info">update</button></a></td>
                     {{/each}}
               
              </tr>
                 

         
            </tbody>
           
          </table>
    </div>
  </section>



      </section>







    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>