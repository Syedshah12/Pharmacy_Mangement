 <hr class="w-25 mx-auto"/>




<!-- table -->  
  <section class="table_inventory">
        <div class="container  bor_1">
            
            <table class="table">
                <thead>
                  <tr>
                    <th class="display-6" scope="col">Id</th>
                    <th  class="display-6" scope="col">Name</th>
                     <th  class="display-6" scope="col">Price</th>
                    <th  class="display-6" scope="col">Amount</th>
                    <th  class="display-6" scope="col">Date</th>
                   
                  </tr>
                </thead>
                <tbody>
                     {{#each wholeData}}
                  <tr>
                    <th scope="row">{{id}}</th>
                    {{#stock_id}}
                    <td>{{name}}</td>
                    <td>{{actualprice}}</td>
                     {{/stock_id}}
                    <td>{{amount}}</td>
                    <td>{{date}}</td>
                  </tr>
                      {{/each}}
                </tbody>
              </table>
        </div>
      </section>
 
    

