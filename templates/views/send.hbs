<!-- adding_form -->
  <form action="/add" method="POST">
    {{#each name}}
<div class="container my-5 w-25 bor_3 bg-light">
    <div class="mb-3 ">
        <label for="exampleFormControlInput1" class="form-label">Id:</label>
        <input type="number" name="id" value={{id}} class="form-control" id="exampleFormControlInput1" readonly>
      </div>
      <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">Name:</label>
        <input type="text" value={{name}} name="name" class="form-control" id="exampleFormControlInput1" readonly>
      </div>
      <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">Formula:</label>
        <input type="text" value={{formula}} name="formula" class="form-control" id="exampleFormControlInput1" readonly>
      </div>
    
      <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">Stock:</label>
        <input type="text" value={{stock}} name="stock" class="form-control" id="exampleFormControlInput1" readonly>
      </div>
      <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">ActualPrice:        </label>
        <input type="text" name="actualprice" value={{actualprice}} class="form-control" id="exampleFormControlInput1" readonly>
      </div>
      <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">SellingPrice:</label>
        <input type="text" value={{sellprice}} name="sellprice" class="form-control" id="exampleFormControlInput1" readonly>
      </div>
</div>
</form>
   {{/each}}
 
    
</body>
</html>